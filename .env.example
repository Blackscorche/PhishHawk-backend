# ============================================
# PhishHawk Backend Configuration
# ============================================

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ============================================
# DATABASE
# ============================================
# MongoDB connection string
# For local: mongodb://localhost:27017/phishhawk
# For Atlas: mongodb+srv://user:pass@cluster.mongodb.net/phishhawk
MONGO_URI=mongodb://localhost:27017/phishhawk

# ============================================
# PHASE 1: INTELLIGENCE GATHERING APIs
# ============================================

# VirusTotal API (RECOMMENDED)
# Get your free API key from: https://www.virustotal.com/gui/join-us
# Free tier: 4 requests/minute, 500 requests/day
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# URLhaus API (NO KEY REQUIRED)
# Free public API: https://urlhaus.abuse.ch/api/
# Optional auth key for higher rate limits from: https://auth.abuse.ch/
URLHAUS_AUTH_KEY=

# Google Safe Browsing API (OPTIONAL)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable "Safe Browsing API" in Google Cloud Console
# Free tier: 10,000 requests/day
GOOGLE_SAFE_BROWSING_API_KEY=your_google_api_key_here

# ============================================
# PHASE 2: ENFORCEMENT APIs (OPTIONAL)
# ============================================

# Cloudflare Registrar API
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Requires: Account Settings Read, Registrar Write permissions
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# ============================================
# EMAIL / TAKEDOWN NOTIFICATIONS
# ============================================

# SMTP Configuration for sending takedown reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM="PhishHawk <your_email@gmail.com>"
EMAIL_TO=report@apwg.org

# ============================================
# SCRAPING SOURCES (OPTIONAL)
# ============================================

# Twitter API for scraping phishing reports
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
